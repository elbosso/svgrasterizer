<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>SVGRasterizer</display-name>
    <description>
        SVGRasterizer
    </description>

    <servlet>
      <servlet-name>SVGRasterizerServlet</servlet-name>
      <servlet-class>de.elbosso.tools.svgrasterizer.SVGRasterizerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>SVGRasterizerServlet</servlet-name>
      <url-pattern>/svgrasterizer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>SVGRasterizerServlet</servlet-name>
      <url-pattern>/bitmap/*</url-pattern>
    </servlet-mapping>
    
</web-app>
